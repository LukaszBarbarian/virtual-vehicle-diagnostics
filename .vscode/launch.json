{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Streamlit",
        "type": "python",
        "request": "launch",
        "module": "streamlit",
        "args": ["run", "ui/app.py"],
        "console": "integratedTerminal",
        "justMyCode": false
      },
      {
        "name": "Python: Stream Processor (local spark)",
        "type": "python",
        "request": "launch",
  
        "program": "${workspaceFolder}/streaming/spark/stream_processor.py",
  
        "console": "integratedTerminal",
        "cwd": "${workspaceFolder}",
  
        "env": {
          "PYSPARK_PYTHON": "python",
          "PYSPARK_DRIVER_PYTHON": "python"
        }
      }
    ]
  }
  